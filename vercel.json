{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "installCommand": "cd ../client && npm install",
                "buildCommand": "cd ../client && npm run build"
            }
        },
        {
            "src": "server/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/$1"
        }
    ]
}